generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id            Int      @id @default(autoincrement())
  name          String?
  brand         String     // "PG", "PP", "WG"
  imageName     String     
  link          String
  updatedAt     DateTime  @updatedAt

  @@map("game")
}

model Plataformas {
  id            Int   @id @default(autoincrement())
  name          String @unique
  brand         String?
  imageName     String
  link          String
  updatedAt     DateTime @updatedAt

  @@map("plataformas")
}
